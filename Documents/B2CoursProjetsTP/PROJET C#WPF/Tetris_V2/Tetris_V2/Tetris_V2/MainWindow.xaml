        mc:Ignorable="d"
        Title="MainWindow" Height="460" Width="450" KeyDown="Deplacement">
    <Grid Margin="0,0,0,-1">
        <Grid x:Name="Grille" HorizontalAlignment="Left" Height="400" Margin="10,10,0,0" VerticalAlignment="Top" Width="200" Background="#FFAE9191">
