        </Grid>
        <TextBlock x:Name="TexteScore" HorizontalAlignment="Left" Margin="269,289,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="31" Width="126" FontSize="21.333" FontWeight="Bold" TextDecorations="Underline" FontFamily="Segoe UI Black" TextAlignment="Center"><Run Text="Score"/><Run Text=" :"/></TextBlock>
        <TextBlock x:Name="Score" HorizontalAlignment="Left" Margin="269,325,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="126" Height="35" TextAlignment="Center" FontWeight="Bold" FontSize="21.333" FontFamily="Segoe UI Black" Text="0"/>
        <Image x:Name="NxtPic" HorizontalAlignment="Left" Height="100" Margin="269,93,0,0" VerticalAlignment="Top" Width="126"/>
        <TextBlock x:Name="TextePièce" HorizontalAlignment="Left" Height="68" Margin="269,20,0,0" TextWrapping="Wrap" Text="Pièce Suivante :" VerticalAlignment="Top" Width="126" FontFamily="Segoe UI Black" FontSize="21.333" TextDecorations="Underline" TextAlignment="Center"/>

    </Grid>
</Window>
